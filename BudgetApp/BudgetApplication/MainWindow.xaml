<Window x:Class="BudgetApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Budżet Domowy" Height="520" Width="950">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- LEWA STRONA: formularz -->
        <StackPanel Grid.Column="0" Margin="0,0,10,0">
            <TextBlock Text="Dodaj transakcję" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

            <TextBlock Text="Data"/>
            <DatePicker SelectedDate="{Binding Date}" />

            <TextBlock Text="Kwota" Margin="0,10,0,0"/>
            <TextBox Text="{Binding Amount, UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock Text="Opis" Margin="0,10,0,0"/>
            <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock Text="CategoryId" Margin="0,10,0,0"/>
            <TextBox Text="{Binding CategoryId, UpdateSourceTrigger=PropertyChanged}" />

            <CheckBox Content="To jest PRZYCHÓD (odznacz = WYDATEK)"
                      IsChecked="{Binding IsIncome}"
                      Margin="0,10,0,0"/>

            <Button Content="Dodaj"
                    Command="{Binding AddCommand}"
                    Margin="0,15,0,0"
                    Height="35"/>
        </StackPanel>

        <!-- PRAWA STRONA: lista -->
        <StackPanel Grid.Column="1">
            <TextBlock Text="Transakcje" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

            <DataGrid ItemsSource="{Binding Transactions}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="60"/>
                    <DataGridTextColumn Header="Data" Binding="{Binding Date, StringFormat=\{0:dd.MM.yyyy\}}" Width="120"/>
                    <DataGridTextColumn Header="Kwota" Binding="{Binding Amount}" Width="100"/>
                    <DataGridTextColumn Header="Opis" Binding="{Binding Description}" Width="*"/>
                    <DataGridTextColumn Header="Kategoria" Binding="{Binding CategoryId}" Width="100"/>
                    <DataGridTextColumn Header="Signed" Binding="{Binding SignedAmount}" Width="110"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Window>
