<Window x:Class="BudgetApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Budżet Domowy" Height="520" Width="950"
        xmlns:conv="clr-namespace:BudgetApplication.Converters;assembly=BudgetApplication">
    <Window.Resources>
        <conv:CategoryIdToNameConverter x:Key="CategoryIdToNameConverter"/>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- LEWA STRONA: formularz -->
        <StackPanel Grid.Column="0" Margin="0,0,10,0">
            <TextBlock Text="Dodaj transakcję" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

            <TextBlock Text="Data"/>
            <DatePicker SelectedDate="{Binding Date}" />

            <TextBlock Text="Kwota" Margin="0,10,0,0"/>
            <TextBox Text="{Binding Amount, UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock Text="Opis" Margin="0,10,0,0"/>
            <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock Text="Kategoria" Margin="0,10,0,0"/>

            <ComboBox ItemsSource="{Binding Categories}"
          SelectedItem="{Binding SelectedCategory}"
          DisplayMemberPath="Name"
          />

            <CheckBox Content="To jest PRZYCHÓD (odznacz = WYDATEK)"
                      IsChecked="{Binding IsIncome}"
                      Margin="0,10,0,0"/>

            <Button Content="Dodaj"
                    Command="{Binding AddCommand}"
                    Margin="0,15,0,0"
                    Height="35"/>
            <TextBlock Text="Ustaw limit na miesiąc" FontWeight="Bold" Margin="0,20,0,5"/>

            <TextBlock Text="Kwota limitu" />
            <TextBox Text="{Binding LimitAmount, UpdateSourceTrigger=PropertyChanged}" />

            <Button Content="Ustaw limit"
        Command="{Binding AddLimitCommand}"
        Margin="0,10,0,0"
        Height="30"/>

        </StackPanel>

        <!-- PRAWA STRONA: lista -->
        <StackPanel Grid.Column="1">
            <TextBlock Text="Transakcje" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

            <TextBlock Text="{Binding Balance, StringFormat=Saldo: {0} zł}"
           FontSize="16"
           FontWeight="Bold"
           Margin="0,0,0,10"/>

            <TextBlock Text="Ostrzeżenia limitów" FontWeight="Bold" Margin="0,10,0,5"/>

            <ListBox ItemsSource="{Binding Warnings}" Height="80">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock>
                <Run Text="Kategoria "/>
                <Run Text="{Binding CategoryName, Mode=OneWay}"/>
                <Run Text=" | Limit: "/>
                <Run Text="{Binding Limit, Mode=OneWay}"/>
                <Run Text=" | Wydano: "/>
                <Run Text="{Binding Spent, Mode=OneWay}"/>
                <Run Text=" | Przekroczono: "/>
                <Run Text="{Binding OverBy, Mode=OneWay}"/>
                        </TextBlock>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>


            <DataGrid ItemsSource="{Binding Transactions}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="60"/>
                    <DataGridTextColumn Header="Data" Binding="{Binding Date, StringFormat=\{0:dd.MM.yyyy\}}" Width="120"/>
                    <DataGridTextColumn Header="Kwota" Binding="{Binding Amount}" Width="100"/>
                    <DataGridTextColumn Header="Opis" Binding="{Binding Description}" Width="*"/>
                    <DataGridTextColumn Header="Kategoria" Width="120">
                        <DataGridTextColumn.Binding>
                            <MultiBinding Converter="{StaticResource CategoryIdToNameConverter}">
                                <Binding Path="CategoryId"/>
                                <Binding Path="DataContext.Categories"
                     RelativeSource="{RelativeSource AncestorType=Window}"/>
                            </MultiBinding>
                        </DataGridTextColumn.Binding>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Signed" Binding="{Binding SignedAmount}" Width="110"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Window>
